{
  "name": "@adcaster/watcher",
  "version": "1.0.0",
  "scripts": {
    "dev": "node ./bin/start",
    "start": "node_modules/pm2/bin/pm2 start ./bin/start --name watcher --cron-restart=\"0 0 * * *\"",
    "restart": "node_modules/pm2/bin/pm2 restart watcher",
    "stop": "node_modules/pm2/bin/pm2 stop watcher",
    "status": "node_modules/pm2/bin/pm2 status watcher"
  },
  "dependencies": {
    "pm2": "^5.3.1",
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.3",
    "socket.io-client": "^4.7.4"
  }
}
